<h1 class="text-2xl font-bold">Welcome, <%= @user.email %></h1>

<h2 class="mt-4 text-xl font-semibold">Your Borrowed Books</h2>

<ul class="mt-2">
  <% @user.borrowings.each do |borrowing| %>
    <li class="bg-gray-200 p-2 rounded mb-2">
      <strong><%= borrowing.book.title %></strong> 
      (Due: <%= borrowing.due_date.strftime("%B %d, %Y") %>)
      <%= link_to "Return", return_book_path(borrowing.book), class: "ml-4 text-blue-500 hover:underline" %>
    </li>
  <% end %>
</ul>

